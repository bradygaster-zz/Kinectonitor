<Window x:Class="Kinectonitor.Windows.Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="800" Padding="0">

	<StackPanel Orientation="Vertical">
		<TextBlock>
			<Run Text="Skeleton Being Tracked? "/>
			<Run Name="skeletonActive" Text="No"/>
		</TextBlock>
		<StackPanel Orientation="Horizontal">
			<Image Width="320" Height="240" Name="kinectVideo"/>
			<Canvas Name="skeletonCanvas" Width="320" Height="240"/>
		</StackPanel>
	</StackPanel>

</Window>
