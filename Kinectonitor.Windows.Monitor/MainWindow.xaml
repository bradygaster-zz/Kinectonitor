<Window x:Class="Kinectonitor.Windows.Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="640" Width="550" Padding="0">

	<StackPanel>
		<Image Width="640" Height="480" Name="kinectVideo"/>
		<Canvas Name="skeletonCanvas" Width="640" Height="550">
			<TextBlock Canvas.Top="0" Canvas.Left="0">
				<Run Text="Skeleton Being Tracked? "/>
				<Run Name="skeletonActive" Text="No"/>
			</TextBlock>
		</Canvas>
	</StackPanel>

</Window>
